<%= form_with model: user, url: user.new_record? ? admin_users_path : admin_user_path(user), local: true, class: "max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md space-y-4 mt-10" do |f| %>
  <h1 class="text-3xl font-bold mb-3 text-gray-800"><%= user.persisted? ? 'Editar' : 'Crear' %> usuario</h1>
  <div>
    <%= f.label :username, "Nombre de usuario", class: "block font-medium text-gray-700 mb-1" %>
    <%= f.text_field :username, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300", required: true %>
  </div>

  <div>
    <%= f.label :email, "Correo electrónico", class: "block font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300", required: true %>
  </div>

  <div>
    <%= f.label :phone, "Teléfono", class: "block font-medium text-gray-700 mb-1" %>
    <%= f.telephone_field :phone, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300", required: true %>
  </div>

  <% if current_user != user %>
    <div>
      <%= f.label :role, "Rol", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.select :role, User::ROLES, {}, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300", required: true %>
    </div>
  <% end %>

  <div>
    <%= f.label :password, "Contraseña", class: "block font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300", autocomplete: "new-password", required: false %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Confirmar contraseña", class: "block font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-blue-300", autocomplete: "new-password", required: false %>
  </div>

  <div class="flex justify-end">
    <%= f.submit "Guardar", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium px-4 py-2 rounded-lg shadow-md transition" %>
  </div>
<% end %>
