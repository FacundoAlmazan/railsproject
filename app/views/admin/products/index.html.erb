<h1 class="text-3xl font-bold mb-6">Productos</h1>

<div class="mb-6">
  <%= link_to "Agregar producto", new_admin_product_path, 
              class: "font-semibold bg-green-600 hover:bg-green-500 text-white py-2 px-4 rounded inline-block text-center"%>
</div>

<%= search_form_for @q, url: admin_products_path, method: :get, class: "mb-6" do |f| %>
  <%= f.label :name_cont, "Buscar producto por nombre:", class: "block font-semibold mb-2" %>
  <%= f.text_field :name_cont, class: "border rounded px-4 py-2 w-full mb-4" %>
  <%= f.submit "Buscar", class: "bg-blue-600 hover:bg-blue-500 text-white py-2 px-4 rounded" %>
  
<% end %>


<div id="products" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
  <% @products.each do |product| %>
    <%= render 'shared/product', product: product, admin: true %>
  <% end %>
</div>

