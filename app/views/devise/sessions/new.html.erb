<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
    <div class="flex justify-center mb-6">
      <!-- Logo -->
      <img src="<%= asset_path('avivas.png') %>" alt="Avivas Logo" class="h-16">
    </div>
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-4">Iniciar sesi칩n</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, "Correo electr칩nico", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Contrase침a", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <%= f.label :remember_me, "Recordarme", class: "ml-2 block text-sm text-gray-900" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= f.submit "Iniciar sesi칩n", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg shadow hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>
    <% end %>
    <div class="mt-4 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>